    <view class="navbar">
        <block wx:for="{{navbarTitle}}" wx:key="index">
            <view class="navbarItem {{navbarActiveIndex === index ? 'navbarItemActive' : ''}}" data-navbar-index="{{index}}" catchtap="onNavBarTap">
                <text>{{item}}</text>
            </view>
            <view class="line" style="width:{{100/navbarTitle.length}}%;transform:translateX({{100*navbarActiveIndex}}%);"></view>
        </block>
    </view>
