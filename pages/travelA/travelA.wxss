@import '/static/iconfont/iconfont.wxss';
.mapContainer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.mapClass {
  width: 100%;
  height: 100%;
}
.navbar {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 30px;
  flex-direction: row;
  text-align: center;
  color: #a8a8a8;
  font-size: 12px;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}
.navbarItem {
  flex: 1;
  padding: 15rpx 0px;
}
.navbarItemActive {
  font-weight: 800;
  color: #f85a1c;
  border-bottom: 2px solid #f85a1c;
  transition: all 0.3ms ease-out 0.01ms;
  transform: translateX(0%);
}
